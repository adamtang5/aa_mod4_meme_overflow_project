extends ../layout.pug
include ../utils.pug
block content
    h2 Post Your Comment
    form.edit-comment-form(method="post" action=`/comments/${comment.id}/edit`)
        input(type="hidden" name="_csrf" value=csrfToken)
        label(for="content") Content
        input(type="text" name="content" id="content" value=comment.content)
        .edit-comment-btns
            button(type="submit") Submit
            a#comment-cencel-btn(href=`/questions/${answer.questionId}`) Cancel
